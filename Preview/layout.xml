<?xml version="1.0" encoding="utf-8"?>
<layout xmlns="https://github.com/Zielony/Ghurund/Engine/UISchema.xsd">
	<StackLayout preferredSize="fill, fill"
					alignment="left, bottom">
		<StackLayout name="container"
					 alignment="center, center"/>
		<PaddingContainer padding="8, 4"
						  preferredSize="fill, wrap">
			<LinearLayout orientation="vertical"
						  preferredSize="fill, wrap">
				<LinearLayout orientation="horizontal">
					<PaddingContainer padding="0,4,4,4">
						<Button layout="file://layouts/ButtonImageLayout.xml"
								name="color1">
							<ColorView color="#ffef5350"
									   preferredSize="24,24"/>
						</Button>
					</PaddingContainer>
					<PaddingContainer padding="4">
						<Button layout="file://layouts/ButtonImageLayout.xml"
								name="color2">
							<ColorView color="#ff42a5f5"
									   preferredSize="24,24"/>
						</Button>
					</PaddingContainer>
					<PaddingContainer padding="4">
						<Button layout="file://layouts/ButtonImageLayout.xml"
								name="color3">
							<ColorView color="#ffffca28"
									   preferredSize="24,24"/>
						</Button>
					</PaddingContainer>
					<PaddingContainer padding="4">
						<Button layout="file://layouts/ButtonImageLayout.xml"
								name="color4">
							<ColorView color="#ff66bb6a"
									   preferredSize="24,24"/>
						</Button>
					</PaddingContainer>
				</LinearLayout>
				<Space preferredSize="4,4"/>
				<CheckBox preferredSize="wrap, wrap"
						  layout="file://layouts/CheckBoxLayout.xml"
						  checked="true"
						   name="enabledCheckBox">
					<TextBlock text="enabled"
						   style="theme://style/textBlock_primary"/>
				</CheckBox>
				<Space preferredSize="4,4"/>
				<CheckBox preferredSize="wrap, wrap"
						  layout="file://layouts/CheckBoxLayout.xml"
						   name="themeCheckBox">
					<TextBlock text="dark theme"
							   style="theme://style/textBlock_primary"/>
				</CheckBox>
				<Space preferredSize="4,4"/>
				<TextBlock text="drop a file here to open"
						   preferredSize="wrap, wrap"
						   style="theme://style/textBlock_secondary"/>
			</LinearLayout>
		</PaddingContainer>
	</StackLayout>
</layout>