<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style x:Key="Ghurund.TextStyle.Body" TargetType="{x:Type TextBlock}">
		<Setter Property="Foreground" Value="{DynamicResource Ghurund.Text.Primary}"/>
		<Setter Property="FontSize" Value="12"/>
		<Setter Property="FontWeight" Value="Normal"/>
	</Style>

	<Style x:Key="Ghurund.TextStyle.Body2" TargetType="{x:Type TextBlock}">
		<Setter Property="Foreground" Value="{DynamicResource Ghurund.Text.Primary}"/>
		<Setter Property="FontSize" Value="10"/>
		<Setter Property="FontWeight" Value="Normal"/>
	</Style>

	<Style x:Key="Ghurund.TextStyle.Heading" TargetType="{x:Type TextBlock}">
		<Setter Property="Foreground" Value="{DynamicResource Ghurund.Text.Secondary}"/>
		<Setter Property="FontSize" Value="36"/>
		<Setter Property="FontWeight" Value="UltraLight"/>
	</Style>

	<Style x:Key="Ghurund.TextStyle.Subhead" TargetType="{x:Type TextBlock}">
		<Setter Property="Foreground" Value="{DynamicResource Ghurund.Text.Secondary}"/>
		<Setter Property="FontSize" Value="24"/>
		<Setter Property="FontWeight" Value="Light"/>
	</Style>

	<Style x:Key="Ghurund.TextStyle.Caption" TargetType="{x:Type TextBlock}">
		<Setter Property="Foreground" Value="{DynamicResource Ghurund.Text.Disabled}"/>
		<Setter Property="FontSize" Value="10"/>
		<Setter Property="FontWeight" Value="Normal"/>
	</Style>

</ResourceDictionary>
