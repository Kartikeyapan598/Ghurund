<UserControl x:Class="Ghurund.Editor.ResourceEditor.SceneEditorPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ghurund.Editor"
			 xmlns:wpf="http://schemas.microsoft.com/netfx/2007/xaml/presentation"
             mc:Ignorable="d" 
             d:DesignHeight="254" d:DesignWidth="511">
	<wpf:DockPanel>
		<wpf:ToolBar DockPanel.Dock="Top">
			<wpf:ToggleButton Content="Orbit" Checked="ToggleButton_Checked" IsChecked="True" Name="orbit"/>
			<wpf:ToggleButton Content="Rotate" Checked="ToggleButton_Checked" Name="rotate"/>
			<wpf:ToggleButton Content="Pan" Checked="ToggleButton_Checked" Name="pan"/>
		</wpf:ToolBar>
		<wpf:WindowsFormsHost>
			<local:SurfaceView x:Name="surfaceView" MouseDown="surfaceView_MouseDown" MouseMove="surfaceView_MouseMove" MouseUp="surfaceView_MouseUp"/>
		</wpf:WindowsFormsHost>
	</wpf:DockPanel>
</UserControl>
