<UserControl x:Class="Ghurund.Editor.ResourceEditor.SoundEditorPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:controls="clr-namespace:Ghurund.Controls;assembly=Controls"
			 xmlns:wpf="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
			 mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{DynamicResource Ghurund.BackgroundLight}">
		<wpf:ToolBarPanel Orientation="Horizontal">
			<controls:IconButton Icon="../Resources/play32.png"
									 Name="play" ToolTip="Play"
									 Style="{StaticResource IconButton_Large}"
									 Click="Play_Click"/>
			<controls:IconButton Icon="../Resources/pause32.png"
									 Name="pause" ToolTip="Pause"
									 Style="{StaticResource IconButton_Large}"
									 Click="Pause_Click"/>
			<controls:IconButton Icon="../Resources/stop32.png"
									 Name="stop" ToolTip="Stop"
									 Style="{StaticResource IconButton_Large}"
									 Click="Stop_Click"/>
		</wpf:ToolBarPanel>
	</Grid>
</UserControl>
