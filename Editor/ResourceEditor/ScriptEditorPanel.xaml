<UserControl x:Class="Ghurund.Editor.ResourceEditor.ScriptEditorPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:wpf="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:controls="clr-namespace:Ghurund.Controls;assembly=Controls"
			 xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
			 mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<wpf:DockPanel>
		<wpf:WrapPanel DockPanel.Dock="Top" Background="{DynamicResource Ghurund.Background}">
			<wpf:ToolBarPanel Orientation="Horizontal">
				<controls:IconButton Icon="../Resources/build32.png"
									 Name="build" ToolTip="Build script"
									 Style="{StaticResource IconButton_Large}"
									 Click="Build_Click"/>
			</wpf:ToolBarPanel>
		</wpf:WrapPanel>
		<DockPanel>
			<avalonedit:TextEditor FontFamily="Consolas" FontSize="9pt"
								   x:Name="shaderCode" VerticalScrollBarVisibility="Auto"
								   Padding="4,0,4,0" BorderThickness="0"
								   SyntaxHighlighting="AngelScript" ShowLineNumbers="True"
								   LineNumbersForeground="{DynamicResource Ghurund.Text.Disabled}"/>
		</DockPanel>
	</wpf:DockPanel>
</UserControl>
