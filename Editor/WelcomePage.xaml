<UserControl x:Class="Ghurund.Editor.WelcomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ghurund.Editor"
			 xmlns:wpf="http://schemas.microsoft.com/netfx/2007/xaml/presentation"
			 mc:Ignorable="d" 
			 Background="{DynamicResource Ghurund.Background}"
             d:DesignHeight="450" d:DesignWidth="800">
	<StackPanel Orientation="Vertical"  HorizontalAlignment="Center" Background="{DynamicResource Ghurund.BackgroundLight}">
		<TextBlock Text="Welcome" DockPanel.Dock="Top" Style="{DynamicResource Ghurund.TextStyle.Heading}" Margin="16,16,16,0"/>
		<StackPanel Orientation="Horizontal">
			<StackPanel Width="300" Margin="16,0,0,0">
				<TextBlock Margin="0,8,0,0">Get your own copy of Ghurund Engine <Hyperlink NavigateUri="https://github.com/ZieIony/Ghurund" RequestNavigate="Hyperlink_RequestNavigate">here</Hyperlink></TextBlock>
				<TextBlock Margin="0,8,0,0">In case of problems raise an <Hyperlink NavigateUri="https://github.com/ZieIony/Ghurund/issues" RequestNavigate="Hyperlink_RequestNavigate">issue</Hyperlink></TextBlock>

				<TextBlock Text="Recent Projects" DockPanel.Dock="Top" Style="{DynamicResource Ghurund.TextStyle.Subhead}" Margin="0,16,0,0"/>
				<ListView Name="recentProjects" HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
				  BorderThickness="0" ItemContainerStyle="{DynamicResource Ghurund.ListViewItemStyle}"
				  Background="{x:Null}" SelectionChanged="RecentProjects_SelectionChanged">
					<ListView.Resources>
						<DataTemplate DataType="{x:Type local:ResourceFile}">
							<StackPanel Orientation="Horizontal" ToolTip="{Binding Path}">
								<Image Source="{Binding Thumbnail}" Width="56" Height="56" Stretch="UniformToFill" Margin="0,4,0,4"/>
								<StackPanel Orientation="Vertical" Margin="8" >
									<TextBlock Text="{Binding Name}" Style="{DynamicResource Ghurund.TextStyle.Body}"/>
									<TextBlock Text="{Binding Path}" Style="{DynamicResource Ghurund.TextStyle.Body2}"/>
									<TextBlock Text="{Binding Modified}" Style="{DynamicResource Ghurund.TextStyle.Caption}" />
								</StackPanel>
							</StackPanel>
						</DataTemplate>
					</ListView.Resources>
				</ListView>

			</StackPanel>
			<StackPanel Width="300" Margin="4,0,16,0">
				<TextBlock Margin="0,8,0,0">Start a <Hyperlink RequestNavigate="Hyperlink_RequestNavigate">new project</Hyperlink></TextBlock>
				<TextBlock Margin="0,8,0,0"><Hyperlink RequestNavigate="Hyperlink_RequestNavigate">Open</Hyperlink> a file</TextBlock>

				<TextBlock Text="Recent Files" DockPanel.Dock="Top" Style="{DynamicResource Ghurund.TextStyle.Subhead}" Margin="0,16,0,0"/>
				<ListView Name="recentFiles" ItemContainerStyle="{DynamicResource Ghurund.ListViewItemStyle}"
				  BorderThickness="0" HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
				  Background="{x:Null}" SelectionChanged="RecentFiles_SelectionChanged">
					<ListView.Resources>
						<DataTemplate DataType="{x:Type local:ResourceFile}">
							<StackPanel Orientation="Horizontal" ToolTip="{Binding Path}">
								<Image Source="{Binding Thumbnail}" Width="56" Height="56" Stretch="UniformToFill" Margin="0,4,0,4"/>
								<StackPanel Orientation="Vertical" Margin="8">
									<TextBlock Text="{Binding Name}" Style="{DynamicResource Ghurund.TextStyle.Body}"/>
									<TextBlock Text="{Binding Path}" Style="{DynamicResource Ghurund.TextStyle.Body2}"/>
									<TextBlock Text="{Binding Modified}" Style="{DynamicResource Ghurund.TextStyle.Caption}"/>
								</StackPanel>
							</StackPanel>
						</DataTemplate>
					</ListView.Resources>
				</ListView>

			</StackPanel>
		</StackPanel>
	</StackPanel>
</UserControl>
