<UserControl x:Class="Ghurund.Editor.ProjectExplorerPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:controls="clr-namespace:Ghurund.Controls;assembly=Controls"
             mc:Ignorable="d" Height="245.825" Width="170">
	<DockPanel>
		<controls:HintTextBox  Height="20"  DockPanel.Dock="Top" BorderThickness="0,1,0,1" HintText="Filter" Background="{DynamicResource Ghurund.BackgroundLight}" />
		<TreeView Name="treeView" BorderThickness="0" TreeViewItem.Expanded="treeView_Expanded" Background="{DynamicResource Ghurund.BackgroundLight}">
			<TreeView.ItemContainerStyle>
				<Style TargetType="{x:Type TreeViewItem}">
					<EventSetter Event="MouseDoubleClick" Handler="OnItemMouseDoubleClick" />
				</Style>
			</TreeView.ItemContainerStyle>
		</TreeView>
	</DockPanel>
</UserControl>
