<UserControl x:Class="Ghurund.Editor.PropertiesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:controls="clr-namespace:Ghurund.Controls;assembly=Controls"
			 xmlns:propertyGrid="clr-namespace:Ghurund.Controls.PropertyGrid;assembly=Controls"
             mc:Ignorable="d" 
             d:DesignHeight="208.611" d:DesignWidth="142.732">
	<Grid>
		<DockPanel x:Name="content">
			<controls:FlowPanel DockPanel.Dock="Top" Background="{DynamicResource Ghurund.Background}">
				<controls:HintTextBox Name="filterBox" Style="{StaticResource FilterBoxStyle}"/>
			</controls:FlowPanel>
			<propertyGrid:PropertyGrid Name="propertyGrid" Filter="{Binding ElementName=filterBox, Path=Text}" Background="{DynamicResource Ghurund.BackgroundLight}"/>
		</DockPanel>
		<Grid Name="hint" Background="{DynamicResource Ghurund.Background}" Visibility="Collapsed">
			<TextBlock Style="{StaticResource NoContentHint}">Select an object to see its properties</TextBlock>
		</Grid>
	</Grid>
</UserControl>
