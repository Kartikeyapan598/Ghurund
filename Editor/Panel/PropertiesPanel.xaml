<UserControl x:Class="Ghurund.Editor.PropertiesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:controls="clr-namespace:Ghurund.Controls;assembly=Controls"
			 xmlns:propertyGrid="clr-namespace:Ghurund.Controls.PropertyGrid;assembly=Controls"
             mc:Ignorable="d" 
             d:DesignHeight="208.611" d:DesignWidth="254.661">
	<DockPanel>
		<controls:HintTextBox Name="filterBox" Height="20"  TextWrapping="NoWrap" DockPanel.Dock="Top" BorderThickness="0,0,0,1" HintText="Filter" Padding="4,0,4,0" Background="{DynamicResource Ghurund.BackgroundLight}" />
		<propertyGrid:PropertyGrid Name="propertyGrid" Background="{DynamicResource Ghurund.BackgroundLight}" Filter="{Binding ElementName=filterBox, Path=Text}"/>
	</DockPanel>
</UserControl>
