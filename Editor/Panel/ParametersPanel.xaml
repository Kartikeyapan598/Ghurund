<UserControl x:Class="Ghurund.Editor.ParametersPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:controls="clr-namespace:Ghurund.Controls;assembly=Controls"
			 xmlns:property="clr-namespace:Ghurund.Editor.Property"
			 mc:Ignorable="d" 
             d:DesignHeight="182.869" d:DesignWidth="153.602">
	<DockPanel>
		<DockPanel Background="{DynamicResource Ghurund.Background}" DockPanel.Dock="Top">
			<controls:HintTextBox Name="filterBox" Style="{StaticResource FilterBoxStyle}"/>
		</DockPanel>
		<property:ParameterGrid x:Name="propertyGrid" Filter="{Binding ElementName=filterBox, Path=Text}" Background="{DynamicResource Ghurund.BackgroundLight}"/>
	</DockPanel>
</UserControl>
