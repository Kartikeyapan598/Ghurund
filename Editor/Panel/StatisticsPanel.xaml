<UserControl x:Class="Ghurund.Editor.Panel.StatisticsPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  xmlns:propertygrid="clr-namespace:Ghurund.Controls.PropertyGrid;assembly=Controls"
	  xmlns:controls="clr-namespace:Ghurund.Controls;assembly=Controls"
	  mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

	<DockPanel>
		<WrapPanel DockPanel.Dock="Top" Background="{DynamicResource Ghurund.Background}" >
			<controls:HintTextBox Name="filterBox" Style="{StaticResource FilterBoxStyle}"/>
		</WrapPanel>
		<propertygrid:PropertyGrid Name="propertyGrid" Background="{DynamicResource Ghurund.BackgroundLight}"
								   Filter="{Binding ElementName=filterBox, Path=Text}"/>
	</DockPanel>
</UserControl>
