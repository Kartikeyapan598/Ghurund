<Application x:Class="GhurundEditor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>


		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/Controls;component/Themes/Theme.Light.xaml" />
				<ResourceDictionary Source="pack://application:,,,/Controls;component/Themes/Theme.xaml" />
				<ResourceDictionary Source="pack://application:,,,/Controls;component/Themes/Typography.xaml" />
				<ResourceDictionary Source="Themes/Generic.xaml" />
			</ResourceDictionary.MergedDictionaries>

			<SolidColorBrush x:Key="Ghurund.Primary">#0061BC</SolidColorBrush>
			<SolidColorBrush x:Key="Ghurund.PrimaryDark">#003B72</SolidColorBrush>
			<SolidColorBrush x:Key="Ghurund.Accent">#ff6e40</SolidColorBrush>

		</ResourceDictionary>


	</Application.Resources>
	
</Application>
