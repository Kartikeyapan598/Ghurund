<UserControl x:Class="Ghurund.Editor.Property.ColorPropertyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ghurund.Editor.Property"
			 xmlns:editor="clr-namespace:Ghurund.Editor"
			 mc:Ignorable="d" 
             d:DesignHeight="28.383" d:DesignWidth="71.668">
	<DockPanel>
		<Border Width="20" Height="20" DockPanel.Dock="Left" Margin="0,0,2,0"
					BorderThickness="{DynamicResource Ghurund.Static.BorderThickness}"
					BorderBrush="{DynamicResource Ghurund.Border}"
					MouseUp="Border_MouseUp">
			<DockPanel>
				<DockPanel.Background>
					<VisualBrush TileMode="Tile" Viewport="0,0,16,16" ViewportUnits="Absolute">
						<VisualBrush.Visual>
							<Image Source="../Resources/checker.png"></Image>
						</VisualBrush.Visual>
					</VisualBrush>
				</DockPanel.Background>
				<Canvas x:Name="color"/>
			</DockPanel>
		</Border>
		<TextBox x:Name="textBox" KeyDown="TextBox_KeyDown" LostFocus="TextBox_LostFocus"/>
	</DockPanel>
</UserControl>
