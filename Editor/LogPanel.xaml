<UserControl x:Class="Ghurund.Editor.LogPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ghurund.Editor"
			 xmlns:controls="clr-namespace:Ghurund.Controls;assembly=Controls"
			 mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<DockPanel>
		<WrapPanel DockPanel.Dock="Top" Background="{DynamicResource Ghurund.Primary}">
			<ToolBarPanel Margin="4,0,4,0" Orientation="Horizontal">
				<controls:IconButton Icon="./Resources/clearLogs32.png" Style="{StaticResource IconButton_Large}"/>
			</ToolBarPanel>
		</WrapPanel>
		<controls:HintTextBox  Height="20" TextWrapping="NoWrap" DockPanel.Dock="Top" BorderThickness="0,0,0,1" HintText="Filter" Padding="4,0,4,0" />
		<ScrollViewer>
			<TextBlock Name="logs" Padding="4" ScrollViewer.HorizontalScrollBarVisibility="Auto"
         ScrollViewer.VerticalScrollBarVisibility="Auto" />
		</ScrollViewer>
	</DockPanel>
</UserControl>
