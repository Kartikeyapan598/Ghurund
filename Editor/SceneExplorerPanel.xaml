<UserControl x:Class="Ghurund.Editor.SceneExplorerPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:controls="clr-namespace:Ghurund.Controls;assembly=Controls"
			 xmlns:graphics="clr-namespace:Ghurund.Managed.Graphics;assembly=ManagedDll"
             xmlns:game="clr-namespace:Ghurund.Managed.Game;assembly=ManagedDll"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="333.792">
	<DockPanel>
		<controls:HintTextBox  Height="20"  TextWrapping="NoWrap" DockPanel.Dock="Top" BorderThickness="0,1,0,1" HintText="Filter" Padding="4,0,4,0" />
		<TreeView Name="treeView" BorderThickness="0" SelectedItemChanged="treeView_SelectedItemChanged" MouseDoubleClick="treeView_MouseDoubleClick">
			<TreeView.Resources>
				<DataTemplate DataType="{x:Type graphics:Camera}">
					<StackPanel Orientation="Horizontal">
						<Image Source="./Resources/camera16.png" Margin="0,0,4,0" />
						<TextBlock Text="{Binding Name}" />
					</StackPanel>
				</DataTemplate>
				<DataTemplate DataType="{x:Type graphics:Light}">
					<StackPanel Orientation="Horizontal">
						<Image Source="./Resources/light16.png" Margin="0,0,4,0" />
						<TextBlock Text="{Binding Name}" />
					</StackPanel>
				</DataTemplate>
				<DataTemplate DataType="{x:Type graphics:Model}">
					<StackPanel Orientation="Horizontal">
						<Image Source="./Resources/model16.png" Margin="0,0,4,0" />
						<TextBlock Text="{Binding Name}" />
					</StackPanel>
				</DataTemplate>
				<HierarchicalDataTemplate DataType="{x:Type game:Scene}" ItemsSource="{Binding Entities}">
					<TextBlock Text="{Binding Name}" />
				</HierarchicalDataTemplate>
			</TreeView.Resources>
		</TreeView>

	</DockPanel>
</UserControl>
