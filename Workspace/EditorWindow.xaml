<Window xmlns:GhurundWorkspace="clr-namespace:Ghurund.Controls.Workspace"  x:Class="Ghurund.Controls.Workspace.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="EditorWindow" Height="300" Width="378" ShowInTaskbar="False" >
	<WindowChrome.WindowChrome>
		<WindowChrome 
        CaptionHeight="0"
			GlassFrameThickness="1" />
	</WindowChrome.WindowChrome>
	<Border BorderBrush="{DynamicResource Ghurund.Border}" BorderThickness="{DynamicResource Ghurund.Static.BorderThickness}">
		<GhurundWorkspace:TabControl x:Name="tabControl" TabStripPlacement="Bottom" Background="{x:Null}" Margin="-1"/>
	</Border>
</Window>
