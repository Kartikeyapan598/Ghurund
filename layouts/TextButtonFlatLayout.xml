<?xml version="1.0" encoding="utf-8"?>
<layout xmlns="https://github.com/Zielony/Ghurund/Engine/UISchema.xsd">
	<ClickableView name="clickable" preferredSize="wrap, wrap">
		<Clip shape="roundRect, 2"
				name="clip"
				preferredSize="fill, fill">
			<StackLayout preferredSize="fill, fill">
				<ColorView color="theme://background"
							name="background"/>
				<ClickResponseView name="clickResponse"
								   preferredSize="fill, fill"
									color="#3f000000"/>
				<PaddingContainer padding="8, 4"
									preferredSize="fill, fill"
									name="padding">
					<StackLayout name="content" alignment="center, center"
									preferredSize="fill, fill">
						<TextBlock text="BUTTON"
								preferredSize="wrap, wrap"
								name="text"
								textColor="theme://onBackground"
								font="theme://button"/>
					</StackLayout>
				</PaddingContainer>
				<Border name="border"
						preferredSize="fill, fill"
						color="#3f000000"
						shape="roundRect, 2"/>
			</StackLayout>
		</Clip>
	</ClickableView>
</layout>