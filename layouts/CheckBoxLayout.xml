<?xml version="1.0" encoding="utf-8"?>
<layout xmlns="https://github.com/Zielony/Ghurund/Engine/UISchema.xsd">
	<SelectableView name="selectable" preferredSize="wrap, wrap">
		<LinearLayout preferredSize="fill, fill"
					  alignment="center, center"
					  orientation="horizontal">
			<ImageView
					name="image"
					image="theme://image/checkBox_checked"
					imageTint="theme://color/accent"/>
			<Space preferredSize="4,4"/>
			<ControlContainer preferredSize="wrap, wrap"
							  name="content"/>
		</LinearLayout>
	</SelectableView>
</layout>