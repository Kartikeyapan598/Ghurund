<?xml version="1.0" encoding="utf-8"?>
<layout xmlns="https://github.com/Zielony/Ghurund/Engine/UISchema.xsd">
	<LinearLayout orientation="vertical" preferredSize="wrap, wrap"
				  alignment="center, center">
		<LinearLayout preferredSize="wrap, wrap"
			  alignment="center, center">
			<PaddingContainer padding="8">
				<CheckBox preferredSize="wrap, wrap"
						  layout="file://CheckBoxLayout.xml"
						  style="theme://style/checkBox"
						  checked="false">
					<TextBlock text="checkBox"
							  style="theme://style/textBlock_primary"/>
				</CheckBox>
			</PaddingContainer>
			<PaddingContainer padding="8">
				<RadioButton preferredSize="wrap, wrap"
						  layout="file://RadioButtonLayout.xml"
						  style="theme://style/radioButton"
						  checked="false">
					<TextBlock text="radioButton"
							  style="theme://style/textBlock_primary"/>
				</RadioButton>
			</PaddingContainer>
			<PaddingContainer padding="8">
				<RadioButton preferredSize="wrap, wrap"
							  layout="file://RadioButtonLayout.xml"
							style="theme://style/radioButton"
							  checked="false">
					<TextBlock text="radioButton"
							  style="theme://style/textBlock_primary"/>
				</RadioButton>
			</PaddingContainer>
		</LinearLayout>
		<LinearLayout preferredSize="wrap, wrap"
				  alignment="center, center">
			<PaddingContainer padding="8">
				<Button preferredSize="wrap, wrap"
						  layout="file://ButtonDefaultLayout.xml">
					<TextBlock preferredSize="wrap, wrap"
							   text="DEFAULT"
							  style="theme://style/textBlock_button"/>
				</Button>
			</PaddingContainer>
			<PaddingContainer padding="8">
				<Button preferredSize="wrap, wrap"
						  layout="file://ButtonAccentLayout.xml">
					<LinearLayout alignment="center, center">
						<ImageView preferredSize="24,24"
								   style="theme://style/imageView"
								   image="file://~/images/test/melon.jpg"/>
						<Space preferredSize="4,4"/>
						<TextBlock preferredSize="wrap, wrap"
								   text="accent"
								  style="theme://style/textBlock_primary_onAccent"/>
					</LinearLayout>
				</Button>
			</PaddingContainer>
			<PaddingContainer padding="8">
				<Button preferredSize="100, wrap"
						  layout="file://ButtonFlatLayout.xml">
					<LinearLayout alignment="center, center">
						<TextBlock preferredSize="wrap, wrap"
							   text="FLAT"
							  style="theme://style/textBlock_button"/>
						<Space preferredSize="fill,4"/>
						<ImageView preferredSize="24,24"
								   style="theme://style/imageView"
								   image="file://~/images/test/watermelon.jpg"/>
					</LinearLayout>
				</Button>
			</PaddingContainer>
			<PaddingContainer padding="8">
				<Button preferredSize="100, wrap"
						  layout="file://~/layouts/ButtonOutlinedLayout.xml">
					<LinearLayout alignment="center, center">
						<TextBlock preferredSize="wrap, wrap"
							   text="OUTLINED"
							  style="theme://style/textBlock_button"/>
					</LinearLayout>
				</Button>
			</PaddingContainer>
		</LinearLayout>
		<Space/>
		<PaddingContainer padding="4">
			<ImageView image="file://~/images/test/btn/btn_rest.png" preferredSize="100,50"/>
		</PaddingContainer>
		<StackLayout preferredSize="wrap,wrap">
			<Border shape="roundRect, 2"
					style="theme://style/border_onBackground"/>
			<PaddingContainer padding="8">
				<TextView text="TextView lorem ipsum dolor"
						  style="theme://style/textBlock_primary"
						  minSize="200,0"/>
			</PaddingContainer>
		</StackLayout>
		<Space/>
		<StackLayout preferredSize="wrap,wrap">
			<Border shape="roundRect, 2"
					style="theme://style/border_onBackground"/>
			<PaddingContainer padding="8">
				<TextField text="TextField lorem ipsum dolor"
						   style="theme://style/textBlock_primary"
						   minSize="200,0"/>
			</PaddingContainer>
		</StackLayout>
		<Space/>
		<StackLayout preferredSize="wrap,wrap">
			<Border shape="roundRect, 2"/>
			<PaddingContainer padding="8">
				<include layout="file://SearchField.xml"/>
			</PaddingContainer>
		</StackLayout>
	</LinearLayout>
</layout>