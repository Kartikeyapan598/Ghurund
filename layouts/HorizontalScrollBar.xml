<?xml version="1.0" encoding="utf-8"?>
<layout xmlns="https://github.com/Zielony/Ghurund/Engine/UISchema.xsd">
	<LinearLayout preferredSize="200, wrap"
				  orientation="horizontal">
		<Button layout="file://layouts/ButtonImageLayout.xml">
			<ImageView image="theme://image/arrowUp"/>
		</Button>
		<StackLayout>
			<ManualLayout>
				<Button layout="file://layouts/ButtonOutlinedLayout.xml"
						preferredSize="wrap, fill"
						minSize="20,0"/>
			</ManualLayout>
			<ClickableView preferredSize="fill, fill">
				<ColorView color="#3fff0000"/>
			</ClickableView>
		</StackLayout>
		<Button layout="file://layouts/ButtonImageLayout.xml">
			<ImageView image="theme://image/arrowDown"/>
		</Button>
	</LinearLayout>
</layout>