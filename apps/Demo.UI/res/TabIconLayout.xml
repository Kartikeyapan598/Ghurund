<?xml version="1.0" encoding="utf-8"?>
<layout xmlns="https://github.com/Zielony/Ghurund/Engine/UISchema.xsd"
		data="TabIconItem" source="ui/widget/tab/TabIconItem.h">
	<SelectableView name="selectable">
		<StackLayout>
			<StateIndicator name="state" preferredSize="fill, fill"
							style="theme://style/stateIndicator_onBackground"/>
			<Border style="theme://style/border_onBackground"/>
			<PaddingContainer padding="8, 4">
				<LinearLayout orientation="horizontal">
					<ImageView name="image" image=".Image"/>
					<TextBlock name="text" text=".Text" style="theme://style/textBlock_button"/>
				</LinearLayout>
			</PaddingContainer>
		</StackLayout>
	</SelectableView>
</layout>