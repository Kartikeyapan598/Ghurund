<?xml version="1.0" encoding="utf-8"?>
<layout xmlns="https://github.com/Zielony/Ghurund/Engine/UISchema.xsd" namespace="Ghurund::UI">
	<LinearLayout orientation="vertical">
		<PaddingContainer padding="4">
			<CheckBox name="expandButton" style="theme://style/CheckBox_expandable"
					  preferredSize="fill, wrap" checkedChanged="+checkedChangedHandler">
				<ControlContainer name="header"/>
			</CheckBox>
		</PaddingContainer>
		<ColorView name="separator" preferredSize="fill, 1" color="#ff0000ff" visible=".Expanded"/>
		<ControlContainer name="content" preferredSize="fill, fill" visible=".Expanded"/>
	</LinearLayout>
</layout>