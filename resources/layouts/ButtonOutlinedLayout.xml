<?xml version="1.0" encoding="utf-8"?>
<layout xmlns="https://github.com/Zielony/Ghurund/Engine/UISchema.xsd">
	<ClickableControl name="clickable" preferredSize="fill, fill">
		<Clip shape="roundRect, 2"
				name="clip"
				preferredSize="fill, fill">
			<StackLayout>
				<ColorView style="theme://style/ColorView_background"
							name="background"/>
				<StateIndicator name="state" preferredSize="fill, fill"
								style="theme://style/StateIndicator_onBackground"/>
				<PaddingContainer padding="8, 4"
									preferredSize="fill, fill"
									name="padding">
						<ControlContainer preferredSize="fill, fill"
										  name="content"/>
				</PaddingContainer>
				<Border name="border"
						preferredSize="fill, fill"
						style="theme://style/Border_onBackground"
						shape="roundRect, 2"/>
			</StackLayout>
		</Clip>
	</ClickableControl>
</layout>