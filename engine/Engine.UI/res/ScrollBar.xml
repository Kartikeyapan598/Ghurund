<?xml version="1.0" encoding="utf-8"?>
<layout xmlns="https://github.com/Zielony/Ghurund/Engine/UISchema.xsd" namespace="Ghurund::UI">
	<LinearLayout preferredSize="200, wrap"
				  orientation="horizontal">
		<Button layout="lib://Ghurund/layouts/ButtonImageLayout.xml">
			<ImageView image="theme://image/arrowUp"/>
		</Button>
		<StackLayout>
			<ManualLayout>
				<Button layout="lib://Ghurund/layouts/ButtonOutlinedLayout.xml"
						preferredSize="wrap, fill"
						minSize="20,0"/>
			</ManualLayout>
			<ClickableControl preferredSize="fill, fill">
				<ColorView color="#3fff0000"/>
			</ClickableControl>
		</StackLayout>
		<Button layout="lib://Ghurund/layouts/ButtonImageLayout.xml">
			<ImageView image="theme://image/arrowDown"/>
		</Button>
	</LinearLayout>
</layout>