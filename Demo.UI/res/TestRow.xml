<?xml version="1.0" encoding="utf-8"?>
<layout xmlns="https://github.com/Zielony/Ghurund/Engine/UISchema.xsd">
	<ClickableControl preferredSize="fill, wrap">
		<StackLayout preferredSize="fill, wrap">
			<ColorView style="theme://style/ColorView_background"/>
			<StateIndicator preferredSize="fill, fill"/>
			<PaddingContainer padding="8" preferredSize="fill, wrap">
				<LinearLayout orientation="horizontal">
					<Clip shape="roundRect, 2">
						<ImageView image=".Image" name="image"
								   preferredSize="48, 48"/>
					</Clip>
					<Space preferredSize="8,8"/>
					<LinearLayout orientation="vertical" preferredSize="fill, wrap">
						<TextBlock name="text" text=".Text" preferredSize="fill,wrap"/>
						<TextBlock name="subtext" text=".Subtext" preferredSize="fill,wrap"
								   style="theme://style/TextBlock_secondary"/>
						<Space preferredSize="8,8"/>
						<LinearLayout alignment="right,center">
							<Button>
								<TextBlock text="SAVE"/>
							</Button>
							<Space preferredSize="8,8"/>
							<Button>
								<TextBlock text="CANCEL"/>
							</Button>
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
			</PaddingContainer>
		</StackLayout>
	</ClickableControl>
</layout>